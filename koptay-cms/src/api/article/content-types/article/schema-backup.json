{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "author": {
      "type": "string",
      "default": "Av. Murat Can Koptay"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "readTime": {
      "type": "string",
      "default": "5"
    },
    "metaDescription": {
      "type": "text"
    },
    "metaKeywords": {
      "type": "string"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
